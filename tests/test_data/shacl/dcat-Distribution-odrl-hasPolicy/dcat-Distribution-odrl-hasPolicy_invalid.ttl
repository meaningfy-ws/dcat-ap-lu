@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:   <http://example.org/> .

# Shared required node
ex:rights-1 a dct:RightsStatement .

# Make each Distribution satisfy the global Distribution constraints
ex:dist-1 a dcat:Distribution ; dct:rights ex:rights-1 ;     dct:rights ex:rights-1 ;
dcat:accessURL "http://example.org/download/1"^^rdfs:Resource .
ex:dist-2 a dcat:Distribution ; dct:rights ex:rights-1 ;     dct:rights ex:rights-1 ;
 dcat:accessURL "http://example.org/download/2"^^rdfs:Resource .
ex:dist-3 a dcat:Distribution ; dct:rights ex:rights-1 ;     dct:rights ex:rights-1 ;
 dcat:accessURL "http://example.org/download/3"^^rdfs:Resource .
ex:dist-4 a dcat:Distribution ; dct:rights ex:rights-1 ;     dct:rights ex:rights-1 ;
 dcat:accessURL "http://example.org/download/4"^^rdfs:Resource .

############################################################
# Invalid 1: maxCount violation (2 odrl:hasPolicy values)
############################################################
ex:dist-1 odrl:hasPolicy ex:pol-1a, ex:pol-1b .
ex:pol-1a a odrl:Policy ; dct:title "Policy 1a"@en .
ex:pol-1b a odrl:Policy ; dct:title "Policy 1b"@en .

############################################################
# Invalid 2: wrong class (object is NOT an odrl:Policy)
############################################################
ex:dist-2 odrl:hasPolicy ex:not-a-policy .
ex:not-a-policy a dcat:Dataset ;
  dct:title "Not a policy"@en .

############################################################
# Invalid 3: literal instead of resource (violates sh:class)
############################################################
ex:dist-3 odrl:hasPolicy "policy-as-literal"@en .

############################################################
# Invalid 4: resource present but missing rdf:type odrl:Policy
############################################################
ex:dist-4 odrl:hasPolicy ex:untyped-policy .
ex:untyped-policy dct:title "Untyped policy node"@en .


