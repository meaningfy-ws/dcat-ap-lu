@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix ex:   <http://example.org/> .

# Shared required supporting nodes
ex:publisher-1 a foaf:Agent ;
  foaf:name "Example publisher"@en .

ex:rights-1 a dct:RightsStatement .

# Valid distributions (so they don't add noise)
ex:dist-201 a dcat:Distribution ;
  dct:rights ex:rights-1 ;
  dcat:accessURL "http://example.org/download/dataset-201"^^rdfs:Resource .

ex:dist-202 a dcat:Distribution ;
  dct:rights ex:rights-1 ;
  dcat:accessURL "http://example.org/download/dataset-202"^^rdfs:Resource .

ex:dist-203 a dcat:Distribution ;
  dct:rights ex:rights-1 ;
  dcat:accessURL "http://example.org/download/dataset-203"^^rdfs:Resource .

############################################################
# Invalid 1: WRONG CLASS (creator is not a foaf:Agent)
############################################################
ex:dataset-creator-wrong-class a dcat:Dataset ;
  dct:identifier  "dataset-201" ;
  dct:title       "Invalid creator - wrong class"@en ;
  dct:description "Creator points to a skos:Concept, not a foaf:Agent."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution ex:dist-201 ;
  dct:creator     ex:not-an-agent .

ex:not-an-agent a skos:Concept ;
  skos:prefLabel "Not an agent"@en .

############################################################
# Invalid 2: LITERAL value (fails sh:class foaf:Agent)
############################################################
ex:dataset-creator-literal a dcat:Dataset ;
  dct:identifier  "dataset-202" ;
  dct:title       "Invalid creator - literal"@en ;
  dct:description "Creator is a literal; must be a foaf:Agent resource."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution ex:dist-202 ;
  dct:creator     "A literal creator"@en .

############################################################
# Invalid 3: SYMMETRIC CYCLE caught by your SPARQL constraint
# Dataset -> creator AND creator -> dataset via dct:creator
############################################################
ex:dataset-creator-cycle a dcat:Dataset ;
  dct:identifier  "dataset-203" ;
  dct:title       "Invalid creator - symmetric cycle"@en ;
  dct:description "Creator cycle: dataset creator points back to dataset."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution ex:dist-203 ;
  dct:creator     ex:cycle-agent .

ex:cycle-agent a foaf:Agent ;
  foaf:name "Cycle agent"@en ;
  dct:creator ex:dataset-creator-cycle .
