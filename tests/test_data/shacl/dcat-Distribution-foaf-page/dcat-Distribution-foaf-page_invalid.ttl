@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:   <http://example.org/> .

# Shared required node for all distributions
ex:rights-1 a dct:RightsStatement .

# Helper: each distribution is globally valid (rights + typed accessURL)
ex:dist-1 a dcat:Distribution ; dct:rights ex:rights-1 ; dcat:accessURL "http://example.org/download/1"^^rdfs:Resource .
ex:dist-2 a dcat:Distribution ; dct:rights ex:rights-2 ; dcat:accessURL "http://example.org/download/2"^^rdfs:Resource .
ex:dist-3 a dcat:Distribution ; dct:rights ex:rights-3 ; dcat:accessURL "http://example.org/download/3"^^rdfs:Resource .
ex:dist-4 a dcat:Distribution ; dct:rights ex:rights-4 ; dcat:accessURL "http://example.org/download/4"^^rdfs:Resource .

############################################################
# Invalid 1: wrong class (object is not foaf:Document)
############################################################
ex:dist-1 foaf:page ex:notADocument .
ex:notADocument a dcat:Dataset ;
  dct:title "Not a FOAF document"@en .

############################################################
# Invalid 2: literal instead of resource (violates sh:class)
############################################################
ex:dist-2 foaf:page "http://example.org/page-as-literal"@en .

############################################################
# Invalid 3: untyped node (missing rdf:type foaf:Document)
############################################################
ex:dist-3 foaf:page ex:untaggedDoc .
ex:untaggedDoc dct:title "Untyped doc node"@en .

############################################################
# Invalid 4: maxCount violation (two foaf:page values)
############################################################
ex:dist-4 foaf:page ex:doc4a, ex:doc4b .
ex:doc4a a foaf:Document .
ex:doc4b a foaf:Document .

