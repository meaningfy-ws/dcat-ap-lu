@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct:  <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:   <http://example.org/> .

# Required supporting nodes
ex:publisher-1 a foaf:Agent ;
  foaf:name "Example publisher"@en .

ex:rights-1 a dct:RightsStatement .

############################################################
# Invalid 1 (1 violation): LITERAL instead of node
############################################################
ex:dataset-dist-literal a dcat:Dataset ;
  dct:identifier  "dataset-invalid-1" ;
  dct:title       "Invalid distribution - literal"@en ;
  dct:description "dcat:distribution must be an IRI or blank node, not a literal."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution "not-a-resource"@en .

############################################################
# Invalid 2 (1 violation): WRONG CLASS (not a dcat:Distribution)
############################################################
ex:dataset-dist-wrong-class a dcat:Dataset ;
  dct:identifier  "dataset-invalid-2" ;
  dct:title       "Invalid distribution - wrong class"@en ;
  dct:description "dcat:distribution points to something not typed dcat:Distribution."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution ex:not-a-distribution .

# Note: intentionally NOT a dcat:Distribution
ex:not-a-distribution a foaf:Document ;
  dct:title "I am not a Distribution"@en .

############################################################
# Invalid 3 (1 violation): 2-cycle (SPARQL)
# dataset -> distCycle AND distCycle -> dataset via dcat:distribution
############################################################
ex:dataset-dist-cycle a dcat:Dataset ;
  dct:identifier  "dataset-invalid-3" ;
  dct:title       "Invalid distribution - cycle"@en ;
  dct:description "Dataset and distribution reference each other via dcat:distribution."@en ;
  dct:publisher   ex:publisher-1 ;
  dct:rights      ex:rights-1 ;
  dcat:distribution ex:distCycle .

ex:distCycle a dcat:Distribution ;
  dct:rights ex:rights-1 ;
  dcat:accessURL "http://example.org/download/dataset-cycle"^^rdfs:Resource ;
  dcat:distribution ex:dataset-dist-cycle .
