@prefix dcat:   <http://www.w3.org/ns/dcat#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:   <http://www.w3.org/2004/02/skos/core#> .
@prefix ex:     <http://example.org/> .

############################################################
# Shared required node (base Distribution requirements)
############################################################
ex:rights-1 a dct:RightsStatement .

############################################################
# Invalid 1: WRONG CLASS (must be dct:LinguisticSystem)
############################################################
ex:dist-lang-wrong-class a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/lang-wrong-class"^^rdfs:Resource ;
    dct:language [
        a skos:Concept ;
        skos:prefLabel "English"@en
    ] .

############################################################
# Invalid 2: LITERAL INSTEAD OF RESOURCE (violates sh:class)
############################################################
ex:dist-lang-literal a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/lang-literal"^^rdfs:Resource ;
    dct:language "English"@en .

############################################################
# Invalid 3: RESOURCE PRESENT BUT NOT TYPED AS dct:LinguisticSystem
############################################################
ex:lang-untyped skos:prefLabel "Untyped language node"@en .

ex:dist-lang-missing-type a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/lang-missing-type"^^rdfs:Resource ;
    dct:language ex:lang-untyped .

