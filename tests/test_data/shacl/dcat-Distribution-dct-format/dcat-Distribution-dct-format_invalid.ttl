@prefix dcat:   <http://www.w3.org/ns/dcat#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos:   <http://www.w3.org/2004/02/skos/core#> .
@prefix ex:     <http://example.org/> .

# Required for Distribution base constraints
ex:rights-1 a dct:RightsStatement .

############################################################
# Invalid 1: Wrong class (not dct:MediaTypeOrExtent)
############################################################
ex:dist-format-wrong-class a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/format-wrong-class"^^rdfs:Resource ;
    dct:format ex:notMediaType .

ex:notMediaType a skos:Concept ;
    skos:prefLabel "Not a MediaTypeOrExtent"@en .

############################################################
# Invalid 2: Literal instead of resource (violates sh:class)
############################################################
ex:dist-format-literal a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/format-literal"^^rdfs:Resource ;
    dct:format "application/xml" .

############################################################
# Invalid 3: Untyped node (resource exists but no rdf:type)
############################################################
ex:dist-format-untyped a dcat:Distribution ;
    dct:rights ex:rights-1 ;
    dcat:accessURL "http://example.org/download/format-untyped"^^rdfs:Resource ;
    dct:format ex:untypedFormat .

ex:untypedFormat dct:title "text/csv" .
