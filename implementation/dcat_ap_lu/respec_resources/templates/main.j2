{% extends "base.j2" %}

{# Custom macro with DCAT column - different name to avoid conflicts #}
{% macro renderEntityOverwrite(entity) %}
    <section>
        <h3 id="{{ entity.label[language]| replace(' ','') |urlencode | title }}">
            <a href="{{ entity.uri }}"
               data-toggle="tooltip"
               data-content="{{ entity.uri }}"
               data-placement="right">{{ entity.label[language] }}</a>

        </h3>
        <span style="float:right;margin-right:10px;">{{ renderFeedbackButton(entity) }}</span>

        <dl>
            <dt>
                Definition
            </dt>
            <dd>
                {{ entity.description[language] | safe }}
            </dd>
            {% if entity.tags[config.usageNoteTagName] or entity.tags['skos:scopeNote'] or entity.tags['skos:example'] %}
                <dt>
                    Usage Note
                </dt>
                <dd>
                    {% set usage_parts = [] %}
                    {% if entity.tags[config.usageNoteTagName] %}
                        {% set _ = usage_parts.append(entity.tags[config.usageNoteTagName]) %}
                    {% endif %}
                    {% if entity.tags['skos:scopeNote'] %}
                        {% set _ = usage_parts.append(entity.tags['skos:scopeNote']) %}
                    {% endif %}
                    {% if entity.tags['skos:example'] %}
                        {% set _ = usage_parts.append(entity.tags['skos:example']) %}
                    {% endif %}
                    {{ usage_parts | join(' ') | safe }}
                </dd>
            {% endif %}
            {% if ((entity.parents | length) > 0 ) %}
                <dt>
                    Subclass of
                </dt>
                <dd>
                    {%- for parent in entity['parents'] %}
                        <a href="{{ parent.scoped_uri | replace(' ','') }}">{{ parent.label[language] }}</a>
                        {% if not loop.last %},{% endif %}
                    {%- endfor %}
                </dd>
            {% endif %}
            {% if config.showReferencesInRespec and entity.tags[config.referenceTagName] %}
                <dt>
                    {{ config.classReferenceRespecLabel if config.classReferenceRespecLabel else 'References' }}
                </dt>
                <dd>
                    {{ entity.tags[config.referenceTagName] | safe }}
                </dd>
            {% endif %}
            <dt>
                Properties
            </dt>
            {% if ((entity.properties | length) > 0 ) %}
                <dd>
                    For this entity, the following properties are defined:
                    {%- for prop in entity['properties'] | sort(attribute='label[language]') %}
                        {# lower the first letter in case it's uppercase #}
                        {% set propertyLabel = prop.label[language][:1]|lower ~ prop.label[language][1:] %}
                        <a href="#{{ (entity.label[language] ~ '.' ~ prop.label[language]) | replace(' ','') | urlencode | title }}">{{ propertyLabel }}</a>
                        {%- if not loop.last %},{% endif %}
                    {%- endfor %}.
                </dd>
                {% if entity.label[language] == "Dataset" %}
                 <p> The following properties of this profile (denoted as 'E') are reused with additional usage notes or additional restrictions compared to [[DCAT-AP-v3.0]]:
                     <a href="#Dataset.accessrights">access rights</a>, <a href="#Dataset.applicablelegislation">applicable legislation</a>, <a href="#Dataset.inseries">in series</a>, <a href="#Dataset.identifier">identifier</a>, <a href="#Dataset.provenance">provenance</a>, <a href="#Dataset.sample">sample</a>, <a href="#Dataset.type">type</a></p>
                <p>The following property is unique to the DCAT-AP-LU profile (denoted as 'P')
                    and was not earlier defined by any requirements in [[DCAT-AP-v3.0]]: <a href="#Dataset.dataprotectiontype">data protection type</a></p>
            {% endif %}
                    {% if entity.label[language] == "Distribution" %}
              <p> The following properties of this profile (denoted as 'E') are reused with additional usage notes or additional restrictions compared to [[DCAT-AP-v3.0]]: <a href="#Distribution.mediatype">media type</a>, <a href="#Distribution.haspolicy">policy</a></p>
               {% endif %}
            {% else %}
                <dd>
                    This specification does not impose any additional requirements to properties for this entity.
                </dd>
            {% endif %}
        </dl>
        {% if ((entity.properties | length) > 0 ) %}
            <div class="u-table-overflow">
                <table class="data-table simple" id="table-mandatory-classes">
                    <thead>
                    <tr class="data-table__header">
                        <th class="data-table__header-title--sortable data-table__header-title--sortable-active"
                            style="width:12%">
                            Property
                        </th>
                        <th class="data-table__header-title--sortable" style="width:12%">
                            Range
                        </th>
                        <th class="data-table__header-title--sortable" style="width:6%">
                            Card
                        </th>
                        <th class="data-table__header-title--sortable" style="width:25%">
                            Definition
                        </th>
                        <th class="data-table__header-title--sortable" style="width:25%">
                            Usage
                        </th>
                        <th class="data-table__header-title--sortable" style="width:20%">
                            DCAT
                        </th>
                        {% if config.showReferencesInRespec %}
                            <th class="data-table__header-title--sortable" style="width:20%">
                                {{ config.propertyReferenceRespecLabel if config.propertyReferenceRespecLabel else 'Reuse' }}
                            </th>
                        {% endif %}
                        {% if metadata.openGithubIssue %}
                            <th class="data-table__header-title--sortable data-table__header-title--sortable-active"
                                style="width:5%">
                                {{ metadata.openGithubIssue.columnLabel if metadata.openGithubIssue.columnLabel else 'Open an issue' }}
                            </th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody class="supertype">
                    {% for prop in entity['properties'] | sort(attribute=sortattr) %}
                        <tr id="{{ (entity.label[language] ~ '.' ~ prop.label[language]) | replace(' ','') |urlencode | title }}"
                            typeof="rdf:Property"
                            resource="{{ prop.uri }}"
                            class="class mandatory">
                            <td>
                                {# lower the first letter in case it's uppercase #}
                                {% set propertyLabel = prop.label[language][:1]|lower ~ prop.label[language][1:] %}
                                <a href="{{ prop.uri }}"
                                   data-toggle="tooltip"
                                   data-content="{{ prop.uri }}"
                                   data-placement="right">
                                    {{ propertyLabel }}</a>
                            </td>
                            <td>
                                {% for range in prop.range %}
                                    {# Determine the display label - match class by URI and use skos:prefLabel or class label #}
                                    {% set range_label_raw = range['range_label'][language] %}
                                    {% set display_label = range_label_raw %}
                                    {# Try to find matching class by URI and use its skos:prefLabel or label #}
                                    {% for cls in classes %}
                                        {% if cls.uri == range['range_uri'] %}
                                            {% if cls.tags and cls.tags['skos:prefLabel'] %}
                                                {% set display_label = cls.tags['skos:prefLabel'] %}
                                            {% elif cls.label and cls.label[language] %}
                                                {% set display_label = cls.label[language] %}
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if range['range_uri'] == range['range_puri'] %}
                                        <a href="#{{ display_label | replace(' ','') |urlencode | title }}"
                                           data-toggle="tooltip"
                                           data-content="{{ range['range_puri'] }}"
                                           data-placement="right">{{ display_label }}</a>
                                    {% else %}
                                        <a href="#{{ display_label | replace(' ','') |urlencode | title }}"
                                           data-placement="right">{{ display_label }}</a>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {{ prop.cardinality }}
                            </td>
                            <td>
                                {{ prop.description[language] | safe }}
                            </td>
                            <td>
                                {% set prop_usage_parts = [] %}
                                {% if prop.tags[config.usageNoteTagName] %}
                                    {% set _ = prop_usage_parts.append(prop.tags[config.usageNoteTagName]) %}
                                {% endif %}
                                {% if prop.tags['skos:scopeNote'] %}
                                    {% set _ = prop_usage_parts.append(prop.tags['skos:scopeNote']) %}
                                {% endif %}
                                {% if prop.tags['skos:example'] %}
                                    {% set _ = prop_usage_parts.append(prop.tags['skos:example']) %}
                                {% endif %}
                                {{ prop_usage_parts | join(' ') | safe }}
                            </td>
                            <td>
                                {% if prop.tags["dct:references"] %}
                                    {{ prop.tags["dct:references"] | safe }}
                                {% else %}
                                    &nbsp;
                                {% endif %}
                            </td>
                            {% if config.showReferencesInRespec %}
                                <td>
                                    {% if prop.tags[config.referenceTagName] %}
                                        {{ prop.tags[config.referenceTagName] | safe }}
                                    {% else %}
                                        &nbsp;
                                    {% endif %}
                                </td>
                            {% endif %}
                            {% if metadata.openGithubIssue %}
                                <td>
                                    {{ renderFeedbackButton(entity, prop) }}
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </section>
{% endmacro %}


{% block pageContent %}
    {% block abstract %}
        <section id="abstract">
            <p> DCAT-AP-LU is a Luxembourg-specific extension of the DCAT-AP profile used for sharing information about
                Catalogues containing Datasets and Data Services descriptions in Europe. It was created as part of the
                national implementation of the Data Governance Act (DGA) to support the creation of a single national
                dataset catalogue for all public sector data. The DCAT-AP-LU reuses large parts of the DCAT-AP-v3.0.1
                standard, with a set of minor adaptations to support specific requirements for Luxembourg.</p>
        </section>
    {% endblock %}

    {% block introduction %}
        <section id="specintro">
            <h2>Introduction</h2>
            <h3>Context</h3>

            DCAT-AP-LU is a Luxembourg-specific extension of the [[DCAT-AP-v3.0]] profile used for sharing information
            about Catalogues containing Datasets descriptions in Europe. It was created as part of the national
            implementation of the <a href="https://eur-lex.europa.eu/eli/reg/2022/868/oj/eng">Data Governance Act</a>
            (DGA) to support the creation of a single national dataset catalogue for all public sector data. The
            DCAT-AP-LU reuses large parts of the [[DCAT-AP-v3.0]] standard, with a set of minor adaptations to support
            specific requirements for Luxembourg.

            <h3>Scope of the Application Profile</h3>

            This document provides guidelines for how to use DCAT-AP-LU to describe datasets in the context of the DGA
            national implementation but that are also interoperable with other national and international dataset
            catalogues following the [[DCAT-AP-v3.0]] specification.

            <h3>Revision history</h3>
            The first DCAT-AP-LU specification was released in March 2025. It focuses exclusively on the Dataset and
            Distribution concepts, as well as the most relevant supportive entities where these are reused "as is" from
            [[DCAT-AP-v3.0]] or where their specification differs for DCAT-AP-LU. A more comprehensive version,
            including additional entities such as Catalogue, Data Service, Dataset Series and further main and
            supportive entities will be released by Q1 2026.
        </section>
    {% endblock %}

    {% block status %}
        <section id="specstatus">
            <h2>Status</h2>
            <p>

                This application profile is published by a collaboration of the Luxembourg National Data Service (LNDS)
                and the Ministère de la Digitalisation, Luxembourg. It is being developed with input and feedback from
                relevant national stakeholders. </p>

            <p>
                It has no official standing of any kind and does not represent the support or consensus of any standards
                organisation. </p>
        </section>
    {% endblock %}

    {% block license %}
        <section id="speclicence">
            <h2>License</h2>
            <p>
                Copyright © 2025 Ministère de la Digitalisation, Luxembourg. All material in the accompanying repository
                is published under the license CC-BY 4.0, unless explicitly otherwise mentioned.
            </p>
        </section>
    {% endblock %}

    {% block conformance %}
        <section id="conformance">

            <!--           <p>
           As well as sections marked as non-normative, all authoring guidelines, diagrams, examples, and notes in this specification are non-normative. Everything else in this specification is normative.</p>

           <p>
           The key words MAY, MUST, and SHOULD in this document are to be interpreted as described in <a href="https://www.rfc-editor.org/info/bcp14">BCP 14</a> [[RFC2119]] [[RFC8174]] when, and only when, they appear in all capitals, as shown here.
                       </p>
           -->

            <h3>Conformance Statement</h3>
            <p>
                In order for applications to conform to DCAT-AP-LU, it MUST conform to [[DCAT-AP-v3.0]].
                In addition, the application must conform to the mentioned constraints and usage guidelines following
                similar conformance statements as specified in [[DCAT-AP-v3.0]].
            </p>
        </section>
    {% endblock %}

    {% block terminology %}
        <section id="specterminology">
            <h2>Terminology</h2>
            <p>
                An <strong>Application Profile</strong> is a specification that reuses terms from one or more base
                standards, and adds more specificity by identifying mandatory, recommended and optional elements for a
                particular application, as well as advising on the use of controlled vocabularies.
            </p>

            <p>
                A <strong>Dataset</strong> is a collection of data featured in a data catalogue that describes datasets
                and offers services to facilitate their discovery and reuse.
            </p>

            <p>
                A <strong>Distribution</strong> is a dataset that is available in a specific format. If a dataset is
                published in multiple formats (e.g. Excel, CSV, Data Cube), then they are described as separate
                distributions.
            </p>


            {% block usedPrefixesGen %}
                {{ super() }}
            {% endblock %}
        </section>
    {% endblock %}

    {% block overview %}
        <section id="specoverview">
            <h2>Overview</h2>
            <p>
                DCAT-AP-LU is a DCAT application profile for sharing information about Catalogues containing Datasets
                descriptions in Luxembourg, compatible with the [[DCAT-AP-v3.0]] profile used in Europe. The core
                classes of the Application Profile are thus the classes <a href="#Dataset">Dataset</a> and <a
                    href="#Distribution">Distribution</a>, with Catalogue and Data Service to be added in the next
                iteration.
            </p>
            <div id="overview">
                {% block overviewClassesGen %}
                    {% if ( ( classes | length > 0)   ) %}
                        <p>
                            This document describes the usage of the following main entities for a correct usage of the
                            vocabulary:
                            <br/>
                            | {%- for class in classes |sort(attribute=sortattr) %}
                            {%- if class.rawTags['class-usage-scope'] == "main" %}
                                <a href="#{{ class.label[language] | replace(' ','') |urlencode | title }}">{{ class.label[language] }}</a>
                                | {%- endif %}{%- endfor %}
                        </p>
                        <p>
                            The main entities are supported by:
                            <br/>
                            | {%- for class in classes |sort(attribute=sortattr) %}
                            {%- if class.rawTags['class-usage-scope'] != "main" %}
                                <a href="#{{ class.label[language] | replace(' ','') |urlencode | title }}">{{ class.label[language] }}</a>
                                | {%- endif %}{%- endfor %}
                        </p>
                    {% endif %}
                {% endblock %}
                {% block overviewDatatypesGen %}
                    {% if ( ( datatypes | length ) > 0 ) %}
                        <p>
                            And supported by these datatypes:
                            <br/>
                            | {%- for datatype in datatypes |sort(attribute=sortattr) %}
                            <a href="#{{ datatype.label[language] | replace(' ','') |urlencode | title }}">{{ datatype.label[language] }}</a>
                            | {%- endfor %}
                        </p>
                    {% endif %}
                {% endblock %}
            </div>
            <div>
                <a href="{{ assetsRoot }}/overview.png"
                   target="_blank">
                    <img src="{{ assetsRoot }}/overview.png"
                         onerror="this.style.display='none'"/>
                </a>
            </div>
        </section>
    {% endblock %}

    {% block mainEntities %}
        <section>
            <h2>Main Entities</h2>
            <p>
                The main entities are those that form the core of the Application Profile.
                The properties and their associated constraints that apply in the context of this profile are listed in
                a
                tabular form.
                Each row corresponds to one property.
                In addition to the constraints also cross-references are provided to [[DCAT-AP-v3.0]]. Unless otherwise
                mentioned, the definitions are those of DCAT-AP.
                <br><br>The <strong>Reuse</strong> field is used to
                indicate usage constraint: </p>
            <ul>
                <li>A: reused as-is, and defined and expressed in [[DCAT-AP-v3.0]]</li>
                <li>E: reused with additional usage notes or additional restrictions compared to [[DCAT-AP-v3.0]]</li>
                <li>P: DCAT-AP-LU profile specific extension where DCAT-AP had no requirements specified on the
                    element
                </li>
            </ul>


            {% block mainEntitiesGen %}
                {% for entity in classes | sort(attribute=sortattr) %}
                    {% if entity.rawTags['class-usage-scope'] == "main" %}
                        {{ renderEntityOverwrite(entity) }}
                    {% endif %}
                {% endfor %}
            {% endblock %}
        </section>
    {% endblock %}

    {% block supportiveEntities %}
        <section>
            <h2>Supportive Entities</h2>
            The supportive entities are supporting the main entities in the Application Profile. They are included in
            the Application Profile because they form the range of properties.

            {% block supportiveEntitiesGen %}
                {% for entity in classes | sort(attribute=sortattr) %}
                    {% if entity.rawTags['class-usage-scope'] != "main" %}
                        {{ renderEntityOverwrite(entity) }}
                    {% endif %}
                {% endfor %}
            {% endblock %}
        </section>
    {% endblock %}

    {% block datatypes %}
        {{ super() }}
    {% endblock %}

    {% block controlledVocabularies %}
        <section id="controlled-vocs">
            <h2>Controlled vocabularies</h2>
            <p><i>This section is non-normative.</i></p>

            <h3>Controlled vocabularies to be used</h3>

            <p>In the table below, a number of properties are listed with controlled vocabularies that MUST be used for
                the listed properties. The declaration of the following controlled vocabularies as mandatory ensures a
                minimum level of interoperability. </p>

            <table class="data-table simple">
                <thead>
                <tr class="data-table__header">
                    <th class="data-table__header-title" style="width:20%">Property URI</th>
                    <th class="data-table__header-title" style="width:15%">Used for Class</th>
                    <th class="data-table__header-title" style="width:30%">Vocabulary name</th>
                    <th class="data-table__header-title" style="width:35%">Usage note</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>dcat:mediaType</td>
                    <td><a href="#Distribution">Distribution</a></td>
                    <td><a href="http://www.iana.org/assignments/media-types/media-types.xhtml">IANA Media Types</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/file-type">File
                        type - EU Vocabularies - Publications Office of the EU</a></td>
                    <td>Indicating the type of file(s) in a distribution, including any compression or packaging format
                        for compressing/grouping files, facilitates the machine-actionability of the dataset. Use the
                        IANA media types in preference to the EU file types list due to the former's greater precision.
                        Both lists may be used in full.
                    </td>
                </tr>
                <tr>
                    <td>dcat:theme</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/data-theme">Dataset Theme
                        Vocabulary</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/data-theme">Data
                        theme - EU Vocabularies - Publications Office of the EU</a></td>
                    <td>The values to be used for this property are the URIs of the concepts in the vocabulary.</td>
                </tr>
                <tr>
                    <td>dct:accrualPeriodicity</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/frequency">EU Vocabularies Frequency
                        Named Authority List</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/frequency">Frequency
                        - EU Vocabularies - Publications Office of the EU</a></td>
                    <td>Use "irreg" rather than "unknown" if there is no set frequency but updates will definitely
                        occur.
                    </td>
                </tr>
                <tr>
                    <td>dct:format</td>
                    <td><a href="#Distribution">Distribution</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/file-type">EU Vocabularies File Type
                        Named Authority List</a></td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>dct:language</td>
                    <td><a href="#Dataset">Dataset</a>, <a href="#Distribution">Distribution</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/language">EU Vocabularies Languages
                        Named Authority List</a></td>
                    <td>For the Luxembourg public sector, use only the following values (:FRA, :DEU, :LTZ, :ENG, :POR)
                    </td>
                </tr>
                <tr>
                    <td>dct:publisher</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/corporate-body">EU Vocabularies
                        Corporate bodies Named Authority List</a></td>
                    <td>The Corporate bodies NAL must be used for European institutions and a small set of international
                        organisations. In case of other types of organisations, national, regional or local vocabularies
                        should be used.
                    </td>
                </tr>
                <tr>
                    <td>dct:spatial</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/continent/">EU Vocabularies Continents
                        Named Authority List</a>, <a href="http://publications.europa.eu/resource/authority/country">EU
                        Vocabularies Countries Named Authority List</a>, <a
                            href="http://publications.europa.eu/resource/authority/place/">EU Vocabularies Places Named
                        Authority List</a>, <a href="http://sws.geonames.org/">Geonames</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/country">Countries
                        and territories - EU Vocabularies - Publications Office of the EU</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/atu">Administrative
                        territorial unit - EU Vocabularies - Publications Office of the EU</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/place">Place
                        - EU Vocabularies - Publications Office of the EU</a></td>
                    <td>The EU Vocabularies Name Authority Lists must be used for continents, countries and places that
                        are in those lists; if a particular location is not in one of the mentioned Named Authority
                        Lists, Geonames URIs must be used. Use "Luxembourg" for any data that applies to the entire
                        country. Use more fine grained location information where applicable.
                    </td>
                </tr>
                <tr>
                    <td>adms:status</td>
                    <td><a href="#Distribution">Distribution</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/distribution-status">EU Vocabularies
                        Distribution Status</a></td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>dct:type</td>
                    <td><a href="#Licensedocument">Licence Document</a></td>
                    <td><a href="http://purl.org/adms/licencetype/1.0">ADMS licence type vocabulary</a></td>
                    <td>The list of terms in the ADMS licence type vocabulary is included in the ADMS specification</td>
                </tr>
                <tr>
                    <td>dcatap:availability</td>
                    <td><a href="#Distribution">Distribution</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/planned-availability">Distribution
                        availability vocabulary</a></td>
                    <td>The list of terms for the availability levels of a dataset distribution in the DCAT-AP
                        specification.
                    </td>
                </tr>
                <tr>
                    <td>dct:accessRights</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="http://publications.europa.eu/resource/authority/access-right">Access Rights Named
                        Authority List</a>, <a
                            href="https://op.europa.eu/en/web/eu-vocabularies/concept-scheme/-/resource?uri=http://publications.europa.eu/resource/authority/access-right">Access
                        right - EU Vocabularies - Publications Office of the EU</a></td>
                    <td>Use one of the following values (<a href="https://op.europa.eu/en/web/eu-vocabularies/concept/-/resource?uri=http://publications.europa.eu/resource/authority/access-right/PUBLIC">:PUBLIC</a>, <a href="https://op.europa.eu/en/web/eu-vocabularies/concept/-/resource?uri=http://publications.europa.eu/resource/authority/access-right/NON_PUBLIC">:NON_PUBLIC</a>). Any dataset labelled as "non-public"
                        should specify all applicable data protections under "dataProtectionType".
                    </td>
                </tr>
                <tr>
                    <td>dpv:hasData</td>
                    <td><a href="#Dataset">Dataset</a></td>
                    <td><a href="https://w3id.org/dpv#Data">Data</a></td>
                    <td>Use only the following subtypes (:PersonalData, :CommerciallyConfidentialData,
